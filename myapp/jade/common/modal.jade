#modalSupport.modal.disabled
    .modal__wrap 
        .close.modal-close
            svg.t-popup__close-icon(width='23px', height='23px', viewBox='0 0 23 23', version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink')
                g(stroke='none', stroke-width='1', fill-rule='evenodd')
                    rect(transform='translate(11.313708, 11.313708) rotate(-45.000000) translate(-11.313708, -11.313708) ', x='10.3137085', y='-3.6862915', width='2', height='30')
                    rect(transform='translate(11.313708, 11.313708) rotate(-315.000000) translate(-11.313708, -11.313708) ', x='10.3137085', y='-3.6862915', width='2', height='30')
        .modal__body
            .modal__body-pic
            .modal__title Поддержка клиентов
            .modal__subtitle Оставьте заявку <br> и наш менеджер свяжется 
                span с вами через 3 минуты 
            form(name="podderjka")
                // Hidden Required Fields
                input(type='hidden', name='project_name', value='Azbuka digital')
                input(type='hidden', name='admin_email', value='Nn-diamond@ya.ru, Info@azbuka.digital')
                input(type='hidden', name='form_subject', value='Поддержка клиентов')
                // END Hidden Required Fields
                input(type='hidden', name='info', value='Поддержка клиентов')
                input.utm_source.hidden(type='hidden', name='utm_source')
                input.utm_medium.hidden(type='hidden', name='utm_medium')
                input.utm_campaign.hidden(type='hidden', name='utm_campaign')
                input.utm_term.hidden(type='hidden', name='utm_term')
                input.utm_content.hidden(type='hidden', name='utm_content')
                .form.step-slide__form
                    .form-line
                        label
                            input(type="text" placeholder="Введите ваше имя" name="name").rfield.name-icon
                    .form-line
                        label
                            input(type="text" placeholder="Введите ваш телефон" name="phone").rfield.phone-mask
                    .form-line-btn
                        .btn.btn-finish(data-modal="#modalFinish").si-button-pulse
                            .blick
                                input(type="submit" value="Оставить заявку").quiz__btn 
                .agree
                    img(src="img/agree.png", alt="agree")
                    .agree__text Нажимая кнопку «оставить заявку», вы даете согласие на обработку персональных данных и соглашаетесь 
                        a(href="policy.html" target="_blank").agree__policy с политикой конфиденциальности
